@page "/pets/{PetTypeString}"
@using PawsitiveMatch.Client.Services
@inject PetService PetService
@inject NavigationManager Nav

<MudContainer MaxWidth="MaxWidth.Large">
    <MudText Typo="Typo.h4" Style="padding: 16px">@(PetType)s for Adoption</MudText>

    <MudGrid>
        @if (Pets == null || Pets.Count == 0)
        {
            <MudText Typo="Typo.subtitle1" Style="padding: 16px">Adoptable @(PetType.ToString().ToLower())s coming soon!</MudText>
        }
        else
        {
            @foreach (var pet in Pets)
            {
                <MudItem xs="12" sm="6" md="4">
                    <MudLink Href="@($"/pets/{PetType}/{pet.Id}")">
                        <MudCard>
                            <MudCardMedia Image="@(string.IsNullOrEmpty(pet.ImagePath) ? "/images/sample.jpg" : pet.ImagePath)" Height="300" />
                            <MudCardContent>
                                <MudText Typo="Typo.h6">@pet.Name</MudText>
                                <MudText>@pet.Breed</MudText>
                            </MudCardContent>
                        </MudCard>
                    </MudLink>
                </MudItem>
            }
        }
    </MudGrid>
</MudContainer>